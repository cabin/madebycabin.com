@import nib

icon(size)
  hide-text()
  background-size: size size
  display: inline-block
  height: size
  width: size

.icon-30
  icon(30px)

.icon
  icon(16px)
  &.edit { background-image: url(icons/edit.png) }
  &.feature { background-image: url(icons/feature.png) }
  &.move { background-image: url(icons/move.png) }
  // &.plus is in the main stylesheet
  &.private { background-image: url(icons/private.png) }
  &.project-images { @extend .icon-30; background-image: url(icons/project-images.png) }
  &.public { background-image: url(icons/public.png) }
  &.thumb-upload { @extend .icon-30; background-image: url(icons/thumb-upload.png) }
  &.trash { background-image: url(icons/trash.png) }

input[type="checkbox"].icon.public
  @extend .icon.private
  &:checked
    @extend .icon.public

.social
  > a
    icon(26px)
  .behance   { background-image: url(icons/social/behance.png) }
  .facebook  { background-image: url(icons/social/facebook.png) }
  .flickr    { background-image: url(icons/social/flickr.png) }
  .github    { background-image: url(icons/social/github.png) }
  .instagram { background-image: url(icons/social/instagram.png) }
  .linkedin  { background-image: url(icons/social/linkedin.png) }
  .pinterest { background-image: url(icons/social/pinterest.png) }
  .tumblr    { background-image: url(icons/social/tumblr.png) }
  .twitter   { background-image: url(icons/social/twitter.png) }


@media all and (-webkit-min-device-pixel-ratio: 1.5)

  .icon
    &.edit { background-image: url(icons/edit@2x.png) }
