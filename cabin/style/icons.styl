@media all and (-webkit-min-device-pixel-ratio: 1.5)

  .icon
    &.browser-shadow { background-image: url(icons/browser-shadow@2x.png) }
    &.edit { background-image: url(icons/edit@2x.png) }
    &.feature { background-image: url(icons/feature@2x.png) }
    &.image-upload { background-image: url(icons/image-upload@2x.png) }
    &.move { background-image: url(icons/move@2x.png) }
    // &.plus is in the main stylesheet
    &.private { background-image: url(icons/private@2x.png) }
    &.public { background-image: url(icons/public@2x.png) }
    &.trash { background-image: url(icons/trash@2x.png) }

  input[type="checkbox"].icon.public
    @extend .icon.private
    &:checked
      @extend .icon.public

