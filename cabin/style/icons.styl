@media all and (-webkit-min-device-pixel-ratio: 1.5)

  icon(arrow-mini, true)
  icon(browser-shadow, true)
  icon(edit, true)
  icon(feature, true)
  icon(image-upload, true)
  icon(move, true)
  // icon(plus, true) is in the main stylesheet
  icon(private, true)
  icon(public, true)
  icon(trash, true)

  .arrow-left
    &:before
      background-image: url('icons/arrow-left-grey@2x.png')
    .no-touch &:hover:before
      background-image: url('icons/arrow-left-white@2x.png')
  .arrow-right
    &:before
      background-image: url('icons/arrow-right-grey@2x.png')
    .no-touch &:hover:before
      background-image: url('icons/arrow-right-white@2x.png')
  .button-arrow:after
    background-image: url('icons/button-arrow-white@2x.png')

  input[type="checkbox"].icon.public
    @extend .icon.private
    &:checked
      @extend .icon.public

