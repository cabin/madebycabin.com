@import nib

client(class, retina = false)
  .clients .{class}
    filename = 'clients/' + class + (retina ? '@2x' : '') + '.png'
    position: relative
    &:before
      absolute: left top
      background-image: url(filename)
      background-repeat: no-repeat
      background-position: center center
      content: ""
      display: inline-block
    unless retina
      s = image-size(filename)
      &, &:before
        width: s[0]
        height: s[1]
      &:before
        background-size: s[0] s[1]

.clients a
  hide-text()
  display: inline-block !important

client(Ancestry)
client(Blurb)
client(Etsy)
client(Fitbit)
client(GOOD)
