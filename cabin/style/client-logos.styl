client(Starbucks)

@media all and (-webkit-min-device-pixel-ratio: 1.5)
  client(Ancestry, true)
  client(Blurb, true)
  client(Etsy, true)
  client(Fitbit, true)
  client(GOOD, true)
  client(Opower, true)
  client(PressedJuicery, true)
