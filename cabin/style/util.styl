// Set width and height at once.
size(w, h = w)
  w = unit(w, px) if unit(w) is ''
  h = unit(h, px) if unit(h) is ''
  width: w
  height: h

// An undecorated list.
plain-list()
  list-style: none
  margin: 0
  padding: 0

// An undecorated list with inline (floated) items.
inline-list(spacing = 20px)
  plain-list()
  li
    float: left
    margin-right: spacing
  li:last-child
    margin-right: 0

// Light text on a dark background looks much better antialiased.
// TODO: rename to light-on-dark-text or something.
light-text(reset = false)
  if reset
    -webkit-font-smoothing: subpixel-antialiased
  else
    -webkit-font-smoothing: antialiased


// Create a pure-CSS arrow; credit http://cssarrowplease.com/.
css-arrow(size = 9px, color = black, position = bottom, center = true)
  opposite = opposite-position(position)
  border: size solid transparent
  border-{opposite}-color: color
  width: 0
  height: 0
  if center
    perpendicular = position in (left right) ? top : left
    position: absolute
    {opposite}: 100%
    {perpendicular}: 50%
    margin-{perpendicular}: -(size)
